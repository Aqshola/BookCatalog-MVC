<!DOCTYPE html>
<html lang="en">
  <head>
    <!-- Required meta tags -->
    <meta charset="utf-8" />
    <meta
      name="viewport"
      content="width=device-width, initial-scale=1, shrink-to-fit=no"
    />

    <!-- Bootstrap CSS -->
    <link
      rel="stylesheet"
      href="https://cdn.jsdelivr.net/npm/bootstrap@4.5.3/dist/css/bootstrap.min.css"
      integrity="sha384-TX8t27EcRE3e/ihU7zmQxVncDAy5uIKz4rEkgIXeMed4M0jlfIDPvg6uqKI2xXr2"
      crossorigin="anonymous"
    />
    <link rel="stylesheet" href="/style.css" />
    <title>Catalog</title>
  </head>
  <nav class="navbar navbar-expand-lg navbar-light bg-white shadow flex">
    <a class="text-dark flex-grow-1" href="/">Back To Home</a>

    <div class="d-flex justify-content-end" id="navbarSupportedContent">
      <ul class="navbar-nav">
        <li class="nav-item">
          <a class="nav-link" href="/auth/logout"
            >Logout <span class="sr-only">(current)</span></a
          >
        </li>
      </ul>
    </div>
  </nav>

  <body>
    <div class="container-fluid">
      <div class="row" style="min-height: 100vh">
        <div class="col-md-3 p-5 dasnav navbar-dark bg-primary">
          <h2 class="text-white font-weight-bold">Admin</h2>
          <ul class="navbar-nav flex-column mt-5 sticky-top">
            <li class="nav-item">
              <a class="nav-link active h5" href="/admin">Dashboard</a>
            </li>
            <li class="nav-item">
              <a class="nav-link h5" href="/admin/category">Category</a>
            </li>
          </ul>
        </div>
        <div class="p-5 col-md-9">
          <div class="row">
            <div class="col-md-7">
              <h2>Edit Book</h2>
            </div>
          </div>
          <div class="row mt-4">
            <div class="col-md-7">
              <form
                method="POST"
                action="/admin/edit-book/<%- book._id %>"
                enctype="multipart/form-data"
              >
                <div>
                  <div class="pre-wrap card-img-top">
                    <img alt="previewImage" id="preview" src="<%- book.coverImg?
                    "/"+book.coverImg:
                    "https://dummyimage.com/600x400/dbdbdb/fff.jpg&text=No+image"
                    %>" />
                  </div>
                  <div class="form-group">
                    <label for="inputFile">Update Cover</label>
                    <input
                      type="file"
                      class="form-control-file"
                      name="bookCover"
                      id="inputFile"
                    />
                  </div>
                </div>

                <div class="form-group">
                  <label for="bookTitle">Book Title</label>
                  <input
                    class="form-control"
                    id="bookTitle"
                    placeholder="Book Title"
                    name="title"
                    value="<%- book.title %> "
                  />
                </div>
                <div class="form-group">
                  <label for="bookType">Book Type</label>
                  <select class="form-control" id="bookType" name="type">
                    <% categories.forEach(category => { %> <%
                    if(category.category == book.type){ %>
                    <option value="<%- category.category %>" selected>
                      <%- category.category %>
                    </option>
                    <% } else{ %>
                    <option value="<%- category.category %>">
                      <%- category.category %>
                    </option>
                    <% } %> <% }) %>
                  </select>
                </div>

                <div class="form-group">
                  <label for="bookPrice">Book price</label>
                  <div class="input-group">
                    <div class="input-group-prepend">
                      <span class="input-group-text" id="bookPricePrepend"
                        >Rp
                      </span>
                    </div>
                    <input
                      class="form-control"
                      id="bookPrice"
                      placeholder="00000"
                      name="price"
                      value="<%- book.price %> "
                    />
                  </div>
                </div>
                <div class="form-group">
                  <label for="BookSynopsis">Book Synopsis</label>
                  <textarea
                    class="form-control"
                    id="BookSynopsis"
                    rows="3"
                    name="synopsis"
                  >
<%-book.synopsis%></textarea
                  >
                </div>
                <a
                  type="button"
                  class="btn btn-secondary"
                  data-dismiss="modal"
                  href="/admin"
                >
                  Back
                </a>
                <button class="btn btn-primary" type="submit">Add Book</button>
              </form>
            </div>
          </div>
        </div>
      </div>
    </div>

    <script src="/script.js"></script>
    <script
      src="https://code.jquery.com/jquery-3.5.1.slim.min.js"
      integrity="sha384-DfXdz2htPH0lsSSs5nCTpuj/zy4C+OGpamoFVy38MVBnE+IbbVYUew+OrCXaRkfj"
      crossorigin="anonymous"
    ></script>
    <script
      src="https://cdn.jsdelivr.net/npm/bootstrap@4.5.3/dist/js/bootstrap.bundle.min.js"
      integrity="sha384-ho+j7jyWK8fNQe+A12Hb8AhRq26LrZ/JpcUGGOn+Y7RsweNrtN/tE3MoK7ZeZDyx"
      crossorigin="anonymous"
    ></script>
  </body>
</html>
